version: '3.8'

services:
  web:
    image: nginx:latest
    container_name: webapp-nginx
    ports:
      - "80:80"
    volumes:
      - ./html:/usr/share/nginx/html:ro
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    restart: unless-stopped
    environment:
      - NGINX_HOST={{ ansible_default_ipv4.address }}
      - NGINX_PORT=80
